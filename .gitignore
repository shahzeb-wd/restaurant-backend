# ======================================
# Node.js Backend .gitignore
# ======================================

# Node modules
node_modules/

# Environment variables
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Logs
logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Coverage directory used by testing tools like jest
coverage/
.nyc_output/

# Build / Dist folders
dist/
build/
tmp/
temp/

# TypeScript cache
*.tsbuildinfo

# Optional npm cache directory
.npm
.eslintcache

# IDE / Editor settings
.vscode/
.idea/
*.su
*.ntvs*
*.njsproj
*.sln

# Mac / Windows system files
.DS_Store
Thumbs.db

# Local MongoDB data (if used)
data/
dump/

# PM2 process logs and data
.pm2/

# Output of 'npm pack'
*.tgz

# Yarn Integrity file
.yarn-integrity

# Docker
.dockerignore
Dockerfile
docker-compose.yml

# Debug folders
debug.log

# Optional lock files (keep one if you use it)
package-lock.json
yarn.lock
pnpm-lock.yaml
